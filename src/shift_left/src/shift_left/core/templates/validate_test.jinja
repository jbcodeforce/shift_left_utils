with expected_results as (
    select 
    {{ expected_result_section }}
    
),
actual_results as (
    select 
        {% for table in column_names -%}
        {{ table }},
        {% endfor %}
    from {{ table_name }}
),
validation_check as (
    select 
       
        {% for table in column_names -%}
        e.expected_{{ table }},
        {% endfor %}
        -- be sure to use the correct conditions for the check
        {% for table in column_names -%}
        case when a.{{ table }} = e.expected_{{ table }} then 'PASS' else 'FAIL' end as {{ table }}_check,
        {% endfor %}

    from expected_results e
    left join actual_results a on a.sid = e.sid -- changecondition here
),
overall_result as (
    select 
        count(*) as total_expected_records,
        sum(case when {% for table in column_names -%} {{ table }}_check = 'PASS' AND {% endfor %}then 1 else 0 end) as passing_records,
        (select count(*) from actual_results) as actual_record_count
    from validation_check
)
select 
    case 
        when total_expected_records = 1  -- should match the number of union
         and passing_records = 1
        then 'PASS' 
        else 'FAIL' 
    end as test_result,
    total_expected_records,
    passing_records
from overall_result