# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# Python files - use spaces, not tabs
[*.py]
indent_style = tabs
indent_size = 4
trim_trailing_whitespace = true

# YAML files
[*.{yml,yaml}]
indent_style = tabs
indent_size = 2

# JSON files
[*.json]
indent_style = tabs
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# SQL files
[*.sql]
indent_style = tabs
indent_size = 4

# Shell scripts
[*.sh]
indent_style = tabs
indent_size = 2


